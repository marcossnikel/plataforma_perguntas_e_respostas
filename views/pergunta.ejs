<%- include (`partials/head.ejs`); %>
<body>
    <%- include (`partials/navbar.ejs`); %>
   <div class="container">
            <hr>
            <h1><%= pergunta.titulo %></h1>
            <p><%= pergunta.descricao %></p>
            <hr>
            <form method="POST" , action="/responder">
                <h3>Awnser</h3>
                <label >Reply :</label>
                <textarea placeholder = "Type your awnser" class="form-control" name="corpo"></textarea>
                <br>
                <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                <button type="submit" class="btn btn-danger">Reply</button>
            </form>
            <hr>
            <h3>Awnsers from other users :</h3>
            <hr>
            <%  respostas.forEach(resposta =>{%>
                <br>
                    <div class="card">
                                <div class="card-body">
                                        <p><%= resposta.corpo %></p>
                                </div>

                    </div>
                <%  })%>
   </div>
</body>
<%- include (`partials/footer.ejs`); %>